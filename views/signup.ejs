<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign-In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/headers.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/sign-in.css">
    <style>
      body {
          background-color: #f3e5f5; /* Light purple background */
          color: #6a1b9a; /* Dark purple text */
      }
      .text-pink {
          color: #ec407a; /* Pink text */
      }
      .bg-purple {
          background-color: #9c27b0; /* Purple background */
      }
      .btn-purple {
          background-color: #6a1b9a; /* Dark purple button */
          border-color: #6a1b9a; /* Dark purple border */
      }
      .btn-purple:hover {
          background-color: #4a148c; /* Darker purple on hover */
          border-color: #4a148c; /* Darker purple border on hover */
      }
      .btn-pink {
          background-color: #ec407a; 
          border-color: #ec407a;
      }
      .btn-pink:hover {
          background-color: #d81b60; 
          border-color: #d81b60; /* Darker pink border on hover */
      }
  </style>
</head>
<body>
    <header class="p-3 text-bg-dark">   
        <div class="container">
          <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
              <li><a href="/" class="nav-link px-2 text-secondary">Home</a></li>
              <li><a href="/profile" class="nav-link px-2 text-white">Profile</a></li>
              <li><a href="/about" class="nav-link px-2 text-white">About</a></li>
              <li><a href="/admin" class="nav-link px-2 text-white">Admin page</a></li>
              <li><a href="/meal" class="nav-link px-2 text-white">Recipe</a></li>
              <li><a href="/history" class="nav-link px-2 text-white">Api history</a></li>
            </ul>
    
            <div class="text-end">
              <a href="/login"><button type="button" class="btn btn-outline-light me-2">Login</button></a>
              <a href="/register"><button type="button" class="btn btn-warning">Sign-up</button></a>
            </div>
          </div>
        </div>
      </header>
      <main class="form-signin w-100 m-auto mt-5">
        <form id="signupForm" action="/api/user/signup" method="POST">
          <div class="form-floating">
              <input type="text" name="name" class="form-control" id="username" placeholder="" required>
              <label for="username">Username</label>
          </div>
          <div class="form-floating">
              <input type="email" name="email" class="form-control" id="email" placeholder="name@example.com" required>
              <label for="email">Email address</label>
          </div>
          <div class="form-floating">
              <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
              <label for="floatingPassword">Password</label>
          </div>
          <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
      </form>
      </main>
      <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('form');
    
            form.addEventListener('submit', async (event) => {
                event.preventDefault();
    
                const formData = new FormData(form);
                console.log(formData)
    
                try {
                  const response = await fetch('/api/user/signup', {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(Object.fromEntries(formData)),
                  });
  
                  if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                  }
  
                  const result = await response.json();
                  window.location.href = "/login";
                  console.log(result); 
    
                  } catch (error) {
                    console.error('Error:', error.message);
                  }
            });
        });
    </script>
      <footer class="mt-5 text-center">
          <p>Ospanova Tomiris | SE-2202</p>
      </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
</body>
</html>